<!-- username, password, firstname, lastname, email -->
<div id="form-container">
  <form id='register-data' action="/user_form" method="post">
    <div>
      <input class="input-item input-box registration-input" type="text" name="username" value="" placeholder="Username">
    </div>
    <div>
      <input class="input-item input-box registration-input" type="text" name="password" value="" placeholder="Password">
    </div>
    <div>
      <input class="input-item input-box registration-input" type="text" name="firstname" value="" placeholder="First Name">
    </div>
    <div>
      <input class="input-item input-box registration-input" type="text" name="lastname" value="" placeholder="Last Name">
    </div>
    <div>
      <input class="input-item input-box registration-input" id="registration-email" type="text" name="email" value="" placeholder="Email">
    </div>
    <input id="registration-submit" class="input-item submit-btn" type="submit" value="Register">
  </form>
</div>
